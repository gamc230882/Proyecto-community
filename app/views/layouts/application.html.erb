<!DOCTYPE html>
<html>
  <head>
    <title>Community</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>     
      
      <ul class="nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <div class="nav-link"><%= link_to  'Salir', destroy_user_session_path, method: :delete %></div>
          </li>
          <li class="nav-item">
            <div class="nav-link"><%= link_to  'Atras', new_image_path %></div>
          </li>
        <% else %>
          <li class="nav-item">
           <div class="nav-link"><%= link_to  'Iniciar', new_user_session_path %></div>
          </li> 
          <li class="nav-item">
           <div class="nav-link"><%= link_to  'Registrarme', new_user_registration_path %></div>
          </li>
        <% end %>
      </ul>

      <p class = "notice" ><%= notice %> </p>
      <p class = "alert" ><%= alert %></p>
      <%= yield %>
    </div>

  </body>
</html>
